<Configuration status="WARN">
    <Appenders>
        <File name="FileAppender" fileName="meu-aplicativo.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="informacao">
            <AppenderRef ref="FileAppender"/>
        </Root>
        <Root level="atencao">
            <AppenderRef ref="FileAppender"/>
        </Root>
        <Root level="alerta">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
